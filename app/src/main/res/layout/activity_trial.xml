<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"
        tools:ignore="MissingConstraints">

        <ProgressBar
            android:id="@+id/profile_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:indeterminate="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="5dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/settings"
            android:layout_margin="10dp"/>



        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:background="#fff"
            app:cardCornerRadius="40dp"
            card_view:cardBackgroundColor="#fff"
            android:layout_marginTop="40dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/worker_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/myProfile"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:elevation="4dp"
                />


        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/worker_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"
            android:textSize="14sp"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/worker_skillset_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="@color/strokeColor"
            android:textSize="12sp"
            android:textStyle="italic"
            android:layout_below="@+id/worker_name_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"


            />




    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relative">

        <ImageView
            android:id="@+id/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rate"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/worker_rating_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_below="@+id/star"
            android:layout_marginStart="60dp"
            android:layout_marginTop="6dp"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/worker_rating_tv"
            android:layout_marginStart="56dp"
            android:layout_marginTop="1dp"
            android:text="Rating"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_correct"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="60dp"

            />


        <TextView
            android:id="@+id/worker_num_jobs_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tasks"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:text="130"
            android:textSize="13sp"
            android:textColor="#000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/worker_num_jobs_tv"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="27dp"
            android:text="Tasks Completed"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INFO"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            android:layout_below="@id/rating"
            android:layout_marginTop="10dp"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/textView_profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info"
            android:text="Date of task :"
            android:layout_marginTop="30dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginStart="40dp"/>

        <TextView
            android:id="@+id/profession_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView_profession"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/textView_profession"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            android:paddingStart="4dp"
            />
        <TextView
            android:id="@+id/textView_pno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_profession"
            android:layout_alignStart="@+id/textView_profession"
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:drawablePadding="4dp"
            android:text="Phone:" />

        <TextView
            android:id="@+id/worker_pno_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView_pno"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/textView_pno"
            android:textSize="12sp"
            android:paddingStart="4dp"
            android:textColor="@color/colorPrimaryDark"
            android:drawablePadding="4dp"
           />


        <TextView
            android:id="@+id/textView_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_pno"
            android:layout_alignStart="@+id/textView_pno"
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:drawablePadding="4dp"
            android:text="Phone:" />

        <Spinner
            android:id="@+id/worker_services"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView_services"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/textView_services"
            android:textSize="12sp"
            android:paddingStart="4dp"
            android:textColor="@color/colorPrimaryDark"
            android:drawablePadding="4dp"
            />

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/mybutton"
            android:text="sign out"
            android:textColor="#F44336"
            android:layout_below="@id/worker_pno_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"

            />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>