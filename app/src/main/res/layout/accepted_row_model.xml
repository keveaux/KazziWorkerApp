<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/strokeColor"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_rowWeight="1"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="8dp"
        card_view:cardBackgroundColor="@color/strokeColor">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/accepted_user_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="11dp"
                android:padding="10dp"
                android:src="@drawable/person" />


            <TextView
                android:id="@+id/accepted_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="4dp"
                android:text="NAME"
                android:textColor="@color/colorAccent"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/accepted_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/accepted_user_name"
                android:layout_marginBottom="18dp"
                android:text="date"
                android:textColor="@color/colorAccent" />

            <View
                android:layout_width="262dp"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="53dp"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="102dp"
                android:layout_toRightOf="@+id/accepted_user_image"
                android:background="#1d1d1d"
                />

            <TextView
                android:id="@+id/accepted_worktxt"
                android:layout_width="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="4dp"
                android:maxLines="1"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/accepted_user_name"
                android:layout_below="@+id/accepted_user_name"
                android:text="work" />

            <TextView
                android:id="@+id/accepted_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/accepted_date"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:textColor="#FF9800"
                android:textSize="20dp"
                android:text="DETAILS" />

            <TextView
                android:id="@+id/accepted_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/accepted_user_name"
                android:layout_below="@+id/accepted_worktxt"
                android:layout_centerVertical="true"
                android:layout_marginTop="6dp"
                android:textColor="@color/colorPrimaryDark"
                android:maxLines="1"
                android:drawableLeft="@drawable/ic_location"
                android:text="TextView" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>