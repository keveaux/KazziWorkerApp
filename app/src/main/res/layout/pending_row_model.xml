<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/strokeColor"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_rowWeight="1"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="8dp"
        card_view:cardBackgroundColor="@color/strokeColor">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/processed_worker_image"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/person"

                />


            <TextView
                android:id="@+id/processed_nametxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="15dp"
                android:text="WORK"
                android:textColor="@color/colorAccent"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/processed_occupation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/processed_nametxt"
                android:layout_marginBottom="17dp"
                android:text="date"
                android:textColor="@color/colorAccent" />

            <View
                android:layout_width="262dp"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="53dp"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="102dp"
                android:layout_toRightOf="@+id/processed_worker_image"
                android:background="#1d1d1d"
                />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/processed_nametxt"
                android:layout_below="@+id/processed_nametxt"
                android:layout_marginTop="12dp"
                android:text="kevin muriithi" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/processed_occupation"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="53dp"
                android:textColor="#faea09"
                android:textSize="20dp"
                android:text="REVIEW" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>